@model CartListViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h1>Index</h1>
@if (Model.Cart.CartLines.Count == 0)
{
     <h4 class="alert-info badge badge-danger">Sepette Ürün Yok!</h4>
}
else
{
    <a href="/Cart/Complete" class="btn btn-sm btn-outline-info">Tamamla</a>
    <table class="table table-responsive-md table-hover">
        @foreach (var item in Model.Cart.CartLines)
        {
            <tr>
                <td>@item.Product.ProductName</td>
                <td>@item.Product.QuantityPerUnit</td>
                <td>@item.Product.UnitPrice</td>
                <td>@item.Quantity</td>
                <td><a class="btn btn-sm btn-outline-danger" asp-controller="Cart" asp-action="RemoveFromCart" asp-route-productId="@item.Product.ProductId">Sepetten Çıkar</a></td>
            </tr>
        }
    </table>
}

