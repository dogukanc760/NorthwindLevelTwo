@model ShippingDetailsViewModel

<form asp-controller="Cart" asp-action="Complete" method="post">
    <div class="form-group">
        <label asp-for="ShippingDetail.FirstName">Ad</label>
        <input asp-for="ShippingDetail.FirstName" class="form-control" placeholder="Müşteri Adı" />
        <br /><br />
        <span class="alert alert-danger" asp-validation-for="ShippingDetail.FirstName"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShippingDetail.LastName">Soyad</label>
        <input asp-for="ShippingDetail.LastName" class="form-control" placeholder="Müşteri Soyadı" />
        <br /><br />
        <span class="alert alert-danger" asp-validation-for="ShippingDetail.LastName"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShippingDetail.Email">Email</label>
        <input asp-for="ShippingDetail.Email" class="form-control" placeholder="Müşteri Email" />
        <br /><br />
        <span class="alert alert-danger" asp-validation-for="ShippingDetail.Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShippingDetail.City">Şehir</label>
        <input asp-for="ShippingDetail.City" class="form-control" placeholder="Müşteri Şehir" />
        <br /><br />
        <span class="alert alert-danger" asp-validation-for="ShippingDetail.City"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShippingDetail.Adress">Adres</label>
        <input asp-for="ShippingDetail.Adress" class="form-control" placeholder="Müşteri Adres" />
        <br /><br />
        <span class="alert alert-danger" asp-validation-for="ShippingDetail.Adress"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShippingDetail.Age">Yaş</label>
        <input asp-for="ShippingDetail.Age" class="form-control" placeholder="Müşteri Yaş" />
        <br /><br />
        <span class="alert alert-danger" asp-validation-for="ShippingDetail.Age"></span>
    </div>
    <button class="btn btn-outline-success btn-sm">Kaydet</button>
</form>