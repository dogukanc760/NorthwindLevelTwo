@model CategoryListViewModel


<table class="table table-responsive-md table-dark">
    <a href="/Product/Index" class="btn btn-outline-danger">Tümünü Listele</a>
    @foreach (var item in Model.Categories)
    {
        var css = "list-group-item";
        if (item.CategoryId == Model.CurrentCategory)
        {
            css += " active";
        }
        <tr>
            <td><a href="/Product/Index?category=@item.CategoryId" class="@css">@item.CategoryName</a></td>
        </tr>
    }

</table>
